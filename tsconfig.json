{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": false,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      ".src/",
      "./node_modules/@types",
      "./node_modules/*"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "typings",
    "**/*-aot.ts",
    "aot/*",
    "src/app/main-aot.ts"
  ]
}